<Application x:Class="SIMS_Projekat_Bolnica_Zdravo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SIMS_Projekat_Bolnica_Zdravo"
             StartupUri="MainWindow.xaml"
             Exit="Application_Exit" >
    <Application.Resources>
        <Style x:Key="doctorButtons" x:Name="doctorButtons"  TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="BorderThickness" Value="3"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#4C1130"></Setter>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="80"/>
        </Style>
        <Image x:Key="Notes" Source="icons/icons8-note-64.ico"/>
    </Application.Resources>
</Application>
